{% set categories = publication_category() %}
{% set publications = publication({'category': categories.whereIn('address', ['info', 'tips', 'blog', 'modules', 'release']).all}, {'date': 'desc'}, 3) %}

{% if publications.count() %}
    <!--================ Start Blog Area =================-->
    <section class="blog-area section-gap">
        <div class="container">
            <div class="row align-items-end justify-content-center">
                <div class="col-lg-12 col-md-12 text-left">
                    <div class="section-title">
                        <h1>Новости</h1>
                        <p></p>
                    </div>
                </div>
            </div>

            <div class="row blog-inner justify-content-center">

                {% for publication in publications %}
                    {% set category = categories.firstWhere('uuid', publication.category) %}
                    <!-- single-blog -->
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="single-blog">
                            <div class="blog-details">
                                <div class="blog-meta">
                                    <span>
                                        <a href="{{ category.address }}">{{ category.title }}</a>
                                        {{ publication.date|df('j.m.Y, H:i') }}
                                    </span>
                                </div>
                                <h5><a href="/{{ publication.address }}">{{ publication.title }}</a></h5>
                                {{ publication.content.short|raw }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!--================ End Blog Area =================-->
{% endif %}
