<!--=======================--><!--=         Blog        =--><!--=======================--><section id="blog-grid">    <div class="container">        <div class="section-title text-center">            <h3 class="sub-title wow pixFadeUp">Новости и события</h3>            <h2 class="title wow pixFadeUp" data-wow-delay="0.3s">                Ознакомьтесь с нашим блогом            </h2>        </div>        <div class="row">            {% for publication in publication(null, {}, 3) %}                <div class="col-lg-4 col-md-6">                    <article class="blog-post wow pixFadeLeft" data-wow-delay="0.4s">                        <div class="feature-image">                            <a href="/{{ publication.address }}">                                {% include 'mixins/img.twig' with {                                    'src': publication.hasFiles() ? publication.getFiles().first().getPublicPath('middle') : '/assets/img/no_image.png',                                    'title': publication.title,                                    'alt': 'blog-thumb',                                    'style': 'height: 280px!important; object-fit: cover;'                                } only %}                            </a>                        </div><!-- /.feature-image -->                        <div class="blog-content">                            <ul class="post-meta">                                <li><a href="/{{ publication.address }}">{{ publication.date|df('d.m.Y H:i') }}</a></li>                            </ul>                            <h3 class="entry-title">                                <a href="/{{ publication.address }}">{{ publication.title }}</a>                            </h3>                            <a href="/{{ publication.address }}" class="post-author">                                {% include 'mixins/img.twig' with { 'src': publication.user.avatar(),'style': 'max-height: 40px;','alt': 'author' } only %}                                {{ publication.user.getName('short') }}                            </a>                        </div><!-- /.blog-content -->                    </article><!-- /.blog-post -->                </div><!-- /.col-lg-4 col-md-6 -->            {% endfor %}        </div><!-- /.row -->    </div><!-- /.container --></section><!-- /#blog-grid -->