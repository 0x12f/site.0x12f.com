{% extends 'main.twig' %}

{% set meta = category.meta %}

{% block bodyinner %}
    <!--================Home Banner Area =================-->
    <section class="banner_area ">
        <div class="banner_inner overlay d-flex align-items-center">
            <div class="container">
                <div class="banner_content text-left">
                    <div class="page_link">
                        <a href="/">Главная</a>
                        <a href="/{{ category.address }}">{{ category.title }}</a>
                    </div>
                    <h2>{{ category.title }}</h2>
                </div>
            </div>
        </div>
    </section>
    <!--================End Home Banner Area =================-->

    <!--================ Start Portfolio Service Area =================-->
    <section class="portfolio-area section-gap">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="portfolio-main">
                        <h1>Проекты</h1>
                        <p>
                            Здесь собраны проекты наших партнеров и заказы клиентов
                        </p>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="active-gallery-carousel">
                        {% for item in publications %}
                            {% include category.template.short with {'categories': categories, 'item': item} only %}
                        {% endfor %}

                        {% include 'pagination.twig' with {'pagination':pagination} only %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================ End Portfolio Service Area =================-->

    {% include "common/cta.twig" %}
    {% include "common/guestbook.twig" %}
{% endblock %}
