{% extends 'page.twig' %}

{% set meta = category.meta %}

{% block page %}
    {% block banner %}
        <!--==========================-->
        <!--=         Banner         =-->
        <!--==========================-->
        <section class="page-banner">
            <div class="container">
                <div class="page-title-wrapper">
                    <h1 class="page-title">{{ category.title }}</h1>

                    <ul class="bradcurmed">
                        <li><a href="/" rel="noopener noreferrer">Главная</a></li>
                        <li>{{ category.title }}</li>
                    </ul>
                </div>
                <!-- /.page-title-wrapper -->
            </div>
            <!-- /.container -->

            <svg class="circle" data-parallax='{"x" : -200}' xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="950px" height="950px">
                <path fill-rule="evenodd" stroke="rgb(250, 112, 112)" stroke-width="100px" stroke-linecap="butt" stroke-linejoin="miter" opacity="0.051" fill="none" d="M450.000,50.000 C670.914,50.000 850.000,229.086 850.000,450.000 C850.000,670.914 670.914,850.000 450.000,850.000 C229.086,850.000 50.000,670.914 50.000,450.000 C50.000,229.086 229.086,50.000 450.000,50.000 Z" />
            </svg>

            <ul class="animate-ball">
                <li class="ball"></li>
                <li class="ball"></li>
                <li class="ball"></li>
                <li class="ball"></li>
                <li class="ball"></li>
            </ul>
        </section>
        <!-- /.page-banner -->
    {% endblock %}

    <!--========================-->
    <!--=         Blog         =-->
    <!--========================-->
    <div class="blog-post-archive">
        <div class="container">
            <div class="row">
                <div class="{{ category.public ? 'col-lg-8' : 'col-lg-12' }}">
                    <div class="post-wrapper" {{ category.public == false ? 'style="max-width: unset"' : '' }}>
                        {% for item in publications %}
                            {% include category.template.short with {'categories': categories, 'item': item} only %}
                        {% endfor %}

                        {% include 'pagination.twig' with {'pagination':pagination} only %}
                    </div><!-- /.post-wrapper -->
                </div><!-- /.col-lg-8 -->

                {% include 'publication.list.side.twig' %}
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div><!-- /.blog-post-archive -->
{% endblock %}
