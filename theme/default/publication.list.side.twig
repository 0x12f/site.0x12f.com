{% if category.public %}    <div class="col-lg-4">        <div class="sidebar">            <div id="search" class="widget widget_search">                <form action="/search" method="get" role="search" class="search-form-widget">                    <label>                        {% include 'mixin/form.twig' with {                            'type': 'search',                            'name': 'q',                            'args': {                                'required': true,                                'placeholder': 'Что ищем?',                                'class': ['search-field'],                            }                        } %}                    </label>                    <button type="submit" class="search-submit">                        <i class="ei ei-icon_search"></i>                    </button>                </form>            </div>            <div id="categories" class="widget widget_categories">                <h2 class="widget-title">Другие категории</h2>                <ul>                    {% for node in categories.where('parent', '=', parent ?? '00000000-0000-0000-0000-000000000000').sortBy('title') %}                        <li>                            <a href="/{{ node.address }}">{{ node.title }}</a>                        </li>                    {% endfor %}                </ul>            </div>            <div id="gp-posts-widget-2" class="widget gp-posts-widget">                <h2 class="widget-title">Последние новости</h2>                <div class="gp-posts-widget-wrapper">                    {% for publication in publication(null, {}, 3) %}                        <div class="post-item">                            <div class="post-widget-thumbnail">                                <a href="/{{ publication.address }}">                                    {% include 'mixins/img.twig' with {                                        'src': publication.hasFiles() ? publication.getFiles().first().getPublicPath('middle') : '/assets/img/no_image.png',                                        'alt': 'thumb',                                    } only %}                                </a>                            </div>                            <div class="post-widget-info">                                <h5 class="post-widget-title">                                    <a href="{{ publication.address }}" title="{{ publication.title }}">{{ publication.title }}</a>                                </h5>                                <span class="post-date">{{ item.date|df('d.m.Y H:i') }}</span>                            </div>                        </div>                    {% endfor %}                </div>            </div>        </div><!-- /.sidebar -->    </div><!-- /.col-lg-4 -->{% endif %}