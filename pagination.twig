{% set pages = (pagination.count / pagination.page)|round(0, 'ceil') %}

{% if pages > 1 %}
    <nav class="blog-pagination justify-content-center d-flex">
        <ul class="pagination justify-content-center">
            {% for page in 0..pages-1 %}
                <li class="page-item {{ is_current_page_number(page) ? 'active' : '' }}">
                    <a class="page-link" href="{{ non_page_path() }}{{ page ? '/' ~ page : '' }}{{ current_query() }}">{{ page + 1 }}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endif %}
